{
  "compilerOptions": {
    "declaration"                   : true,
    "declarationDir"                : "lib/types",
    "esModuleInterop"               : true,
    "experimentalDecorators"        : true,
    "inlineSourceMap"               : false,
    "inlineSources"                 : true,
    "lib"                           : ["esnext"],
    "module"                        : "esnext",
    "moduleResolution"              : "node",
    "outDir"                        : "lib/esm",
    "pretty"                        : true,
    "skipLibCheck"                  : true,
    "sourceMap"                     : true,
    "strict"                        : true,
    "suppressImplicitAnyIndexErrors": true,
    "target"                        : "esnext"
  },
  "include"        : [
    "src/**/*.ts",
    "declarations/**/*.d.ts"
  ]
}
